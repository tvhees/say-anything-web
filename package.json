{
  "name": "say-anything",
  "version": "1.0.0",
  "description": "Online implementation of Say Anything",
  "main": "./build/main",
  "nodemonConfig": { 
    "exec": "npm run dev",
    "watch": ["src/*"],
    "ignore": ["**/__tests__/**", "*.test.js", "*.spec.js"]
  },
  "scripts": {
    "start": "node run prod",
    "server": "node ./build/main",
    "clean": "rimraf build",
    "transpile": "babel src -d build",
    "build": "npm-run-all clean transpile",
    "watch:dev": "nodemon",
    "dev": "NODE_ENV=development npm-run-all build server",
    "prod": "NODE_ENV=production npm-run-all build server",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tvhees/say-anything-web.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tvhees/say-anything-web/issues"
  },
  "homepage": "https://github.com/tvhees/say-anything-web#readme",
  "engines": {
    "node": "10.x"
  },
  "dependencies": {
    "express": "^4.17.1",
    "nodemon": "^2.0.3",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "socket.io": "^2.3.0",
    "xstate": "^4.8.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.5"
  },
  "optionalDependencies": {
    "win-node-env": "^0.4.0"
  }
}
