{
  "name": "say-anything",
  "version": "1.0.0",
  "description": "Online implementation of Say Anything",
  "main": "./build/main",
  "nodemonConfig": {
    "exec": "npm run dev",
    "watch": [
      "src/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "scripts": {
    "start": "node ./build/server.js",
    "start:dev": "npm run build:dev && node ./build/server.js",
    "clean": "rimraf build",
    "build:prod": "npm-run-all clean prod:server prod:client",
    "build:dev": "npm-run-all clean dev:server dev:client",
    "prod:server": "webpack --mode=production --config webpack.server.config.js",
    "prod:client": "webpack --mode=production --config webpack.prod.config.js",
    "dev:server": "webpack --mode=development --config webpack.server.config.js",
    "dev:client": "webpack --mode=development --config webpack.dev.config.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tvhees/say-anything-web.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tvhees/say-anything-web/issues"
  },
  "homepage": "https://github.com/tvhees/say-anything-web#readme",
  "engines": {
    "node": "10.x"
  },
  "dependencies": {
    "express": "^4.17.1",
    "nodemon": "^2.0.3",
    "normalize.css": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "rimraf": "^3.0.2",
    "socket.io": "^2.3.0",
    "xstate": "^4.8.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-react": "^7.9.4",
    "babel-loader": "^8.1.0",
    "babel-watch": "^7.0.0",
    "css-loader": "^3.5.2",
    "file-loader": "^6.0.0",
    "html-loader": "^1.1.0",
    "html-webpack-plugin": "^4.2.0",
    "node-sass": "^4.13.1",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.1.3",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-dev-middleware": "^3.7.2",
    "webpack-hot-middleware": "^2.25.0",
    "webpack-node-externals": "^1.7.2"
  },
  "optionalDependencies": {
    "win-node-env": "^0.4.0"
  }
}
